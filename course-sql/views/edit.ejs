<% layout("layouts/boilerplate") %>

<main class="form-container">
  <h3 class="form-title">Edit Course</h3>

  <form method="POST" enctype="multipart/form-data" action="/courses/<%= course.id%>?_method=PUT" class="course-form">

    <div class="form-group">
      <label for="name">Course Name</label>
      <input type="text" id="name" name="name" value="<%= course.name %>" required>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="5" required><%= course.description %></textarea>
    </div>

    <div class="form-group">
      <label for="image">Image </label>
      <input type="file" accept="image/*" id="image" name="image">
    </div>

    <div class="form-group">
      <label for="price">Price (â‚¹)</label>
      <input type="number" id="price" name="price" value="<%= course.price %>" required>
    </div>

    <div class="form-group">
      <label for="tutor">Tutor Name</label>
      <input type="text" id="tutor" name="tutor" value="<%= course.tutor %>" required>
    </div>

    <button type="submit" class="btn-submit">Update Course</button>
  </form>
</main>


