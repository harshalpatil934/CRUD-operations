          <img src="<%= course.image %>" alt="<%= course.name %>">
          <h3><%= course.name %></h3>
          <p><%= course.tutor %></p>
          <span class="price">â‚¹<%= course.price %></span>
          <a href="/courses/<%= course._id %>" class="btn-view">View Course</a>
        </div>
      <% }%>
    </div>
  </section>
